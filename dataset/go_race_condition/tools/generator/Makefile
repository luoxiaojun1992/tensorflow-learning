.PHONY: generate-samples
generate-samples:
	go run main.go && shuf ../../training.csv -o ../../training_shuffle.csv && shuf ../../validation.csv -o ../../validation_shuffle.csv && shuf ../../testing.csv -o ../../testing_shuffle.csv && echo "code,label" >> ../../sample.csv && cat ../../training_shuffle.csv >> ../../sample.csv && cat ../../validation_shuffle.csv >> ../../sample.csv && cat ../../testing_shuffle.csv >> ../../sample.csv && split -b 100M ../../sample.csv ../../sample.csv. && rm ../../training.csv && rm ../../training_shuffle.csv && rm ../../validation.csv && rm ../../validation_shuffle.csv && rm ../../testing.csv && rm ../../testing_shuffle.csv && rm ../../sample.csv
